@model Repository.Models.User

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center" style="margin:5rem;">
        <div class="col-md-7 mt-5">
            <div class="card">
                <div class="card-header" style=" display: flex; justify-content: center;">
                    <h4 class="card-title">Register</h4>
                </div>
                <div class="card-body" style="display: flex; flex-direction: column; align-items: center">
                    <form asp-action="Login" style="margin:2rem; display:flex; align-items:center; flex-direction: column;">
                        <div class="form-group" style="visibility:hidden;">
                            <label asp-for="Role" class="control-label"></label>
                            <input asp-for="Role" class="form-control" value="User" />
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="FullName">FullName</label>
                            <input type="text" asp-for="FullName" class="form-control" id="fullnamme" placeholder="Enter fullname">
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Email">Email</label>
                            <input type="email" asp-for="Email" class="form-control" id="email" placeholder="Enter email">
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Password">Password</label>
                            <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Password">
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Address">Address</label>
                            <input type="text" asp-for="Address" class="form-control" id="address" placeholder="Enter your address">
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="PhoneNumber">Phone Number</label>
                            <input type="text" asp-for="PhoneNumber" class="form-control" id="phoneNumber" placeholder="Enter Phone Number">
                        </div>
                        
                        <button type="submit" class="btn btn-primary">Register</button>
                    </form>
                    <span style="margin-top:1rem;">Already have account <a asp-controller="Account" asp-action="Login"> Login </a></span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Link to Bootstrap JS -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.0.0-beta2/js/bootstrap.min.js" integrity="sha384-XXXXX" crossorigin="anonymous"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
