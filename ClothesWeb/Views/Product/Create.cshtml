@model Repository.DTO.ProductDTO

<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Product</h2>
            <br />
        </div>
        <div class="mb-3">
            <label asp-for="ProductName">Product Name</label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="InStock">In Stock</label>
            <input asp-for="InStock" class="form-control" />
            <span asp-validation-for="InStock" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div><div class="mb-3">
            <label asp-for="Color"></label>
            <input asp-for="Color" class="form-control" />
            <span asp-validation-for="Color" class="text-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Size"></label>
            <select asp-for="Size" asp-items="ViewBag.Size" class="form-select">
                <option disabled selected>--Select Size--</option>
            </select>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="CategoryId">Category</label>
            <select asp-for="CategoryId" asp-items="ViewBag.Category" class="form-select">
                <option disabled selected>--Select Category--</option>
            </select>
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <label asp-for="Image"></label>
        <input type="file" id="uploadBox" name="file" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        </div>
    </div>
</form>